<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Habits</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
    <h1 class="mb-4">My Habits</h1>

    <form action="/habits/search" method="GET" class="mb-4">
        <input type="text" name="q" class="form-control" placeholder="Search by habit name" required>
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </form>

    <% if (habits.length > 0) { %>
        <ul class="list-group">
            <% habits.forEach(habit => { %>
                <li class="list-group-item">
                    <strong><%= habit.name %></strong> - <%= habit.category %> - <%= habit.status %>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No habits found.</p>
    <% } %>
</body>
</html>
