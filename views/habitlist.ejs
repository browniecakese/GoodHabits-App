<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>GoodHabit App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">GoodHabit App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/habitlist">My Habits</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/addHabit">Add Habit</a>
              </li>
              <li class="nav-item">
                <% if (user.role === "admin") { %>
                    <a class="nav-link" href="/habitadmin">User List</a>
                    <% }
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              <li class="nav-item">
                <form action="/search" method="GET" class="d-flex">
                  <input type="text" name="q" placeholder="Search my habits..." class="form-control" required>
                  <button type="submit" class="btn btn-primary ms-2">Search</button>
                </form>
              </li>
            </ul>
          </div>
        </div>
    </nav>

    <div class="container">
        <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
        <br>
        <div class="text-center"><h2>Habit Details</h2></div>
        <br>
        <% if (habits && habits.length > 0) { %>
          <% habits.forEach(function(habit) { %>
            <div>
              <p><b>Habit Name:</b><br> <%= habit.name %></p>
              <p><b>Image:</b><br> <img src="../images/<%= habit.image %>" width="20%"></p>
              <p><b>Type:</b><br> <%= habit.type %></p>
              <p><b>Date:</b><br> <%= habit.date %></p>
              <p><b>Description:</b><br> <%= habit.description %></p>
              <p><b>Feeling:</b><br> <%= habit.feelings %></p>
              <form action="/habit/<%= habit._id %>/updateHabit" method="GET" style="display:inline;">
                <button type="submit" class="btn btn-warning btn-sm">Edit</button>
              </form>
              <form action="/habit/<%= habit._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
              <hr>
            </div>
          <% }); %>
        <% } else { %>
          <p>No habits found.</p>
        <% } %>
        <% if (user.role === "admin") { %>
          <a href ="/habitadmin">Back</a>
        <% } else { %>
          <a href ="/habitlist">Back</a>
        <% } %>
    </div>
  
</body>
</html>
