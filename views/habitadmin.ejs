<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>GoodHabit App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">GoodHabit App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/habitlist">Habit List</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/addHabit">Add Habit</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
            <!-- Example: Show admin link only for admins -->
            <% if (user && user.role === 'admin') { %>
              <li class="nav-item">
                <a class="nav-link" href="/habitadmin">Admin Panel</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>User in Good Habits</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">User ID</th>
            <th width="100">User Name</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% users.forEach(function(u) { %>
          <tr>
            <td><%= u.userId %></td>
            <td><%= u.username %></td>
            <td><a href="/admin/editUser/<%= u.userId %>">Edit</a></td>
            <!-- Delete Link -->
            <td><a href="/admin/deleteUser/<%= u.userId %>" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>

