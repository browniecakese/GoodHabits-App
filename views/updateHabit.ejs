<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>GoodHabit App</title>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">GoodHabit App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addHabit">Add New Habit</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Main content -->
   <div class="container mt-4">
    <h2 class="text-center mb-4">Update Habit</h2>
    
    <% if (habit) { %>
      <form action="/updateHabit/<%= habit.habitId || habit.id %>" method="POST" enctype="multipart/form-data" class="mx-auto" style="max-width: 500px;">
        <div class="mb-3">
          <label for="name" class="form-label">Habit Name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= habit.name %>" required>
        </div>

        <div class="mb-3">
          <label for="type" class="form-label">Habit Type</label>
            <select class="form-control" id="type" name="type" value="<%= habit.type %>" required>
              <option value="Indoor">Indoor</option>
              <option value="Outdoor">Outdoor</option>
            </select>
        </div>

        <div class="mb-3">
          <label for="date" class="form-label">Date</label>
          <input type="date" class="form-control" id="date" name="date" value="<%= habit.date ? habit.date.toISOString().slice(0,10) : '' %>" required>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <input type="text" class="form-control" id="description" name="description" value="<%= habit.description %>" required>
        </div>

        <div class="mb-4">
              <label for="feeling" class="form-label">Feelings</label>
                <select class="form-control" id="feelings" name="feelings" value="<%= habit.feelings %>" required>
                    <option value="Happy">Happy</option>
                    <option value="Neutral">Neutral</option>
                    <option value="Sad">Sad</option>
                </select>
        </div>

        <div class="mb-3">
          <label class="form-label">Current Image</label>
          <input type="text" class="form-control" name="currentImage" value="<%= habit.image %>" readonly>
          <img src="/images/<%= habit.image %>" class="img-thumbnail mt-2" style="width: 150px;">
        </div>

        <div class="mb-4">
          <label for="image" class="form-label">Upload New Image</label>
          <input class="form-control" type="file" id="image" name="image" accept="image/*">
        </div>

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary">Update Habit</button>
          <a href="/habitlist" class="btn btn-secondary">Back to My Habits</a>
        </div>
      </form>
    <% } else { %>
      <p class="text-center">No Habit found.</p>
    <% } %>
  </div>
</body>
</html>
